<div class="row d-flex justify-content-center">
	<h1>New transaction</h1>
</div>	
<div class="jumbotron container">
	<%= form_for @transaction do |f| %>
		<%= render 'shared/error_messages', object: @transaction %>
		<div><%= f.label :transaction_name %></div>
		<div><%= f.text_field :name %></div>
		<div><%= f.label :amount %></div>
		<div><%= f.number_field :amount, step: :any %></div><br>
		<% if @type == 'group_transaction' %>
			<%= f.select :group_id, Group.alphabetical_order.collect { |c| [ c.name, c.id ] }, {}, class: "form-control" %><br>
		<% end %>
	 	<div class="col-md-12 button-box">
	 		<%= f.submit "CREATE TRANSACTION", class: 'form-control button' %>
	 	</div> 
	<% end %>	
</div>
